@model IEnumerable<Diploma.Models.Contract>

@{
    ViewData["Title"] = "ShowContracts";
}

<h1 class="h3 mb-2 text-gray-800">All Contracts</h1>

<div class="card shadow mb-4">
    <div class="card-header d-flex justify-content-end py-3">
        <a asp-action="AddContract" class="btn btn-success btn-circle btn-sm">
            <i class="fas fa-plus"></i>
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EndDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Seller)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Buyer)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.House)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee)
                        </th>
                        <th>
                            Type
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @item.StartDate.ToString("d")
                            </td>
                            <td>
                                @item.EndDate?.ToString("d")
                            </td>
                            <td>
                                @item.Seller.Name @item.Seller.Surname
                            </td>
                            <td>
                                @item.Buyer.Name @item.Buyer.Surname
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.House.Address)
                            </td>
                            <td>
                                @item.Employee.Name @item.Employee.Surname
                            </td>
                            <td>
                                @item.ContractType.Type
                            </td>
                            <td>
                                <a asp-action="EditContract" asp-route-id="@item.Id" class="btn btn-info btn-circle btn-sm">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a asp-action="DeleteContract" asp-route-id="@item.Id" class="btn btn-danger btn-circle btn-sm"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
