@model Diploma.Models.Buyer

@{
    ViewData["Title"] = "EditBuyer";
}

<h1>Edit Buyer</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBuyer" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control form-control-user" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control form-control-user" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassportId" class="control-label"></label>
                <input asp-for="PassportId" class="form-control form-control-user" />
                <span asp-validation-for="PassportId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="ShowBuyers" class="btn btn-danger btn-circle"><i class="fas fa-arrow-left"></i></a>
                <button type="submit" class="btn btn-success btn-circle"><i class="fas fa-check"></i></button>
            </div>
        </form>
    </div>
</div>


