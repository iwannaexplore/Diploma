@model Diploma.Models.ViewModels.SettingsViewModel
@{
    ViewData["Title"] = "Settings";
}

<h1>Settings</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Settings">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ContributionsToFunds" class="control-label"></label>
                <input asp-for="ContributionsToFunds" class="form-control">
                <span asp-validation-for="ContributionsToFunds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IncomeTax" class="control-label"></label>
                <input asp-for="IncomeTax" class="form-control">
                <span asp-validation-for="IncomeTax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentOfPremises" class="control-label"></label>
                <input asp-for="PaymentOfPremises" class="form-control">
                <span asp-validation-for="PaymentOfPremises" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PercentageOfRental" class="control-label"></label>
                <input asp-for="PercentageOfRental" class="form-control">
                <span asp-validation-for="PercentageOfRental" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayrollTax" class="control-label"></label>
                <input asp-for="PayrollTax" class="form-control">
                <span asp-validation-for="PayrollTax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PercentageOfSales" class="control-label"></label>
                <input asp-for="PercentageOfSales" class="form-control">
                <span asp-validation-for="PercentageOfSales" class="text-danger"></span>
            </div>
            <p>@ViewBag.InfoString</p>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-circle"><i class="fas fa-check"></i></button>
            </div>
        </form>
    </div>
</div>