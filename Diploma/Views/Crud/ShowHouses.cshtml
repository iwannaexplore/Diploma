@model IEnumerable<Diploma.Models.House>

@{
    ViewData["Title"] = "Дома";
}
<h1 class="h3 mb-2 text-gray-800">Все дома</h1>
<p class="mb-4">Если вы удалите дом - контракт связанный с ним так же будет удален</p>

<div class="card shadow mb-4">
    <div class="card-header d-flex justify-content-end py-3">
        <a asp-action="AddHouse" class="btn btn-success btn-circle btn-sm">
            <i class="fas fa-plus"></i>
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                           Адрес
                        </th>
                        <th>
                            Продавец
                        </th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @item.Seller.Name @item.Seller.Surname
                        </td>
                        <td>
                            <a asp-action="EditHouse" asp-route-id="@item.Id" class="btn btn-info btn-circle">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a asp-action="DeleteHouse" asp-route-id="@item.Id" class="btn btn-danger btn-circle"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

